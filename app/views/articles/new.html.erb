<%= form_tag new_article_path, method: :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Get" %>
<% end %>
<% if @url %>
  <div>
    <h1>Articles</h1>
    <p><%= image_tag @image %></p>
    <p><%= link_to @title, @link %></p>
    <%= form_for(@article) do |f| %>
      <div class="form-inputs">
        <%= f.hidden_field :title, value: @title %>
        <%= f.hidden_field :link, value: @link %>
        <%= f.hidden_field :image, value: @image %>
      </div>

      <div class="form-group">
        <%= f.label "Categories" %>
        <%= f.select :article_category_id, ArticleCategory.all.map {|article_category| [article_category.name, article_category.id] } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, value: "Add" %>
      </div>
    <% end %>
  </div>
<% end %>
