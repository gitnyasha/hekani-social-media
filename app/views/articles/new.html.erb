<main class="container">
  <div class="row mb-2">
    <div class="col-md-8 mx-auto">
      <%= form_tag new_article_path, method: :get do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Enter link to your blog post.." %>
        </div>
        <%= submit_tag "Get Article", class: "btn btn-outline-primary" %>
      <% end %>
    </div>
  </div>
</main>
<% if @url %>
  <div>
    <main class="container">
      <div class="row mb-2">
        <div class="col-md-8 mx-auto">
          <h1>Article</h1>
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col-8 p-4 d-flex flex-column position-static">
              <h3 class="mb-0"><%= link_to @title, @link %></h3>
              <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
              <%= form_for(@article) do |f| %>
                <%= f.hidden_field :title, value: @title %>
                <%= f.hidden_field :link, value: @link %>
                <%= f.hidden_field :image, value: @image %>
                <div class="form-group">
                  <%= f.label "Choose Category" %>
                  <%= f.select :article_category_id, ArticleCategory.all.map {|article_category| [article_category.name, article_category.id] }, class: "form-control" %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, value: "Add", class: "btn btn-success" %>
                </div>
              <% end %>
            </div>
            <div class="col-4 d-none d-lg-block">
              <%= image_tag @image, class: "img-responsive", height: "250" %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
<% end %>
