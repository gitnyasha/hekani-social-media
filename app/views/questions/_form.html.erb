<!-- Modal -->
<% if @current_user %>
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <%= form_for(@current_user.questions.build) do |form| %>
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ask Question</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= form.text_area :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label "Categories" %>
              <%= form.select :question_category_id, QuestionCategory.all.map {|question_category| [question_category.name, question_category.id] } %>
            </div>
          </div>
          <div class="modal-footer">
            <%= form.button :submit, class: "btn btn-primary"  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
